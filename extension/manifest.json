{
    "manifest_version": 2,

    "name": "Critters",
    "description": "Feed and breed your very own internet devouring critter!",
    "version": "0.1.2015",

    "permissions": [
        "activeTab",
        "tabs",
        "https://www.google.com/accounts/OAuthGetRequestToken",
        "https://www.google.com/accounts/OAuthAuthorizeToken",
        "https://www.google.com/accounts/OAuthGetAccessToken"
    ],

    "background": {
        "scripts": [
            "chrome_ex_oauthsimple.js",
            "chrome_ex_oauth.js",
            "background.js"
        ]
    },

    "browser_action": {
        "default_icon": "img/icon.png"
    }
}
