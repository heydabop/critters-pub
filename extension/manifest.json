{
    "manifest_version": 2,

    "name": "Critters",
    "description": "Feed and breed your very own internet devouring critter!",
    "version": "0.1.2015",

    "permissions": [
        "activeTab",
        "tabs",
        "windows",
        "http://*/"
    ],

    "browser_action": {
        "default_icon": "img/icon.png",
        "default_popup": "popup.html"
    }
}
