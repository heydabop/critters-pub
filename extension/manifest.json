{
    "manifest_version": 2,

    "name": "Critter Crunch",
    "description": "Feed and breed your very own internet devouring critter!",
    "version": "0.1.2015",

    "icons": { "16": "icon16.png",
               "48": "icon48.png",
               "128": "icon128.png" },

    "permissions": [
        "activeTab",
        "tabs",
        "windows",
        "http://*/"
    ],

    "browser_action": {
        "default_icon": "img/icon.png",
        "default_popup": "popup.html"
    }
}
